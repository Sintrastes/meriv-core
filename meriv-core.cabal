build-type:          Simple
extra-source-files:  CHANGELOG.md

executable meriv-core
  main-is:             Main.hs
  mixins: 
      base (Prelude as BasePrelude)
    , base hiding (Prelude)
  default-extensions:
      MultiParamTypeClasses
    , FunctionalDependencies
    , GADTs
    , ExistentialQuantification
    , DataKinds
    , KindSignatures
    , PolyKinds
    , FlexibleInstances
    , FlexibleContexts
    , LambdaCase
    , TypeFamilies
    , TemplateHaskell
    , BangPatterns
    , PartialTypeSignatures
    , AllowAmbiguousTypes
    , GeneralizedNewtypeDeriving
    , ScopedTypeVariables
    , TypeApplications
    , StandaloneKindSignatures
    , UndecidableInstances
    , InstanceSigs
    , EmptyCase
  other-modules:
      Prelude
    , Control.Unification
    , Meriv.Types
    , Meriv.Interp
    , Meriv.Util.Functor
  build-depends:
      base
    , monad-tree
    , partial-order
    , singletons
    , singletons-th
    , singletons-base
  hs-source-dirs:      src
  default-language:    Haskell2010
